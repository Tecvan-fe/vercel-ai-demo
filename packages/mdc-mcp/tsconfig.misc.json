{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "rootDir": "./",
    "composite": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "types": ["node", "vitest/globals"]
  },
  "include": ["__tests__", "vitest.config.ts", "__e2e__"],
  "exclude": ["./dist"],
  "references": [
    {
      "path": "./tsconfig.build.json"
    }
  ]
}
